  <select id="selectResourceListByUsername" resultType="com.coderman.auth.vo.resource.ResourceVO">
      SELECT
       DISTINCT
          r2.resource_url as resourceUrl,
          r2.method_type as methodType
      FROM
          tb_user u
          INNER JOIN tb_user_role ur ON u.user_id = ur.user_id
          INNER JOIN tb_role r ON ur.role_id = r.role_id
          INNER JOIN tb_role_func rf ON r.role_id = rf.role_id
          INNER JOIN tb_func f ON rf.func_id = f.func_id
          INNER JOIN tb_func_resource fr ON fr.func_id = f.func_id
          INNER JOIN tb_resource r2 ON r2.resource_id = fr.resource_id
      WHERE
          u.username = #{username}
  </select>


